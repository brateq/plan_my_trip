<script src="//maps.google.com/maps/api/js?v=3.23&key=#{ENV['gmaps_api_token']}"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<p id="notice"><%= notice %></p>

<%= form_for :ta_url, url: import_attractions_path, method: :post do |f| %>
  <%= f.text_field :url %>
<% end %>

<h1>Listing Attractions (<%= @attractions.count %>) </h1>
<%= link_to "Reset map", reset_attractions_path, method: :post %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Link</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= link_to attraction.name, attraction.link, :target => "_blank" %></td>
        <td><%= attraction.type %></td>
        <td><%= attraction.latitude %></td>
        <td><%= attraction.longitude %></td>
        <td><%= link_to 'Edit', edit_attraction_path(attraction) %></td>
        <td><%= link_to 'Destroy', attraction, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style='width: 800px;'>
  <div id="map" style='width: 1250px; height: 600px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>

<%= link_to 'Download attractions', attractions_path(format: 'csv') %>
